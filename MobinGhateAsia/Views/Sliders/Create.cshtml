                    @Html.EditorFor(model => model.LinkTitle)

                @Html.ValidationMessageFor(model => model.LinkTitle)
            </div>
        </div>

        <div class="form-group">
            @Html.LabelFor(model => model.LinkTitleEn, new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                    @Html.EditorFor(model => model.LinkTitleEn)

                @Html.ValidationMessageFor(model => model.LinkTitleEn)
            </div>
        </div>

        <div class="form-group">
            @Html.LabelFor(model => model.LinkAddress, new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                    @Html.EditorFor(model => model.LinkAddress)

                @Html.ValidationMessageFor(model => model.LinkAddress)
            </div>
        </div>

