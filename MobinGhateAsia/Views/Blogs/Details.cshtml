@model Models.ViewModels.BlogDetailViewModel
@{
    Layout = "~/Views/Shared/FrontEndLayout/_FrontEndLayout.cshtml";

}
<div class="page-content">


    <div class="wt-bnr-inr overlay-wraper" style="background-image:url('/Assets/images/header.jpg');">
        <div class="overlay-main bg-black" style="opacity:0.5;"></div>
        <div class="container">
            <div class="wt-bnr-inr-entry">
                <h1 class="text-white">@Model.Blog.TitleSrt</h1>

            </div>
        </div>
    </div>
    <!-- BREADCRUMB ROW -->
    <div class="bg-gray-light p-tb20">
        <div class="container">
            <ul class="wt-breadcrumb breadcrumb-style-1">
                <li><a href="/@ViewContext.RouteData.Values["language"]">@Resources.Label.MenuHome</a></li>
                <li><a href="/@ViewContext.RouteData.Values["language"]/blog"> @Resources.Label.MenuNews</a></li>
                <li>@Model.Blog.TitleSrt</li>
            </ul>
        </div>
    </div>
    <!-- SECTION CONTENT START -->
    <div class="section-full p-t80 p-b50">
        <div class="container">

            <!-- BLOG START -->
            <div class="blog-post date-style-1 blog-detail row">

                <div class="wt-post-media wt-img-effect zoom-slow col-md-3">
                    <img src="@Model.Blog.ImageUrl" alt="@Model.Blog.TitleSrt">
                </div>
                <div class="col-md-8">
                    <div class="wt-post-title ">
                        <h2 class="post-title">@Model.Blog.TitleSrt</h2>
                    </div>
                    <div class="wt-post-meta ">
                        <ul>
                            <li class="post-date"> <i class="fa fa-calendar"></i><strong>@Model.Blog.SubmitDate.ToShortDateString()</strong></li>
                            <li class="post-comment"><i class="fa fa-user"></i>@Model.Blog.VisitNumber @Resources.Label.Visit </li>
                        </ul>
                    </div>
                    <div class="wt-post-text">
                        <p>
                            @Html.Raw(Model.Blog.DetailSrt)
                        </p>
                    </div>
                </div>
            </div>

        </div>
    </div>
</div>